<mvc:View controllerName="ER.zferslip.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns:f="sap.f"
	xmlns:layout="sap.ui.layout"
    xmlns:fb="sap.ui.comp.filterbar" xmlns:core="sap.ui.core" 
	xmlns:t="sap.ui.table" xmlns:u="sap.ui.unified"
    xmlns="sap.m">
    <!-- <Page id="page" title="{i18n>title}"> -->
    <!-- <f:DynamicPage id="idDynamicPage" headerExpanded="{/headerExpanded}" toggleHeaderOnTitleClick="{/titleClickable}" showFooter="true"> -->
    <f:DynamicPage id="idDynamicPage" showFooter="true">
			<!-- DynamicPage Title -->
			<f:title>
				<f:DynamicPageTitle >
					<f:heading >
						<Title text="전표생성"/>
					</f:heading>
					<f:expandedContent>
						<ObjectAttribute id="idAtUserName" title="사용자명 " text="{/employeeSet/0/Deptid}"/>
						<ObjectAttribute id="idAtDept"  title="소속부서 " text="회계팀"/>
					</f:expandedContent>
					<f:snappedContent>
						<Label id="idLabeluname" text="회계팀 방근영(201200011)"/>
					</f:snappedContent>
					<f:snappedTitleOnMobile>
						<!-- <ObjectAttribute title="사용자명" text="Warehouse A"/>
						<ObjectAttribute title="소속부서" text="23L"/> -->
					</f:snappedTitleOnMobile>
					<f:content>
						<OverflowToolbar>
							<GenericTag text="미생성"
								status="Error"
								press="onPressOpenPopover"
								design="StatusIconHidden">
								<ObjectNumber 
                                    id="idObjNum"
                                    number="2"
									unit="개"
									emphasized="false"
									state="Error"/>
							</GenericTag>
						</OverflowToolbar>
					</f:content>
					<!-- <f:actions>
						<Button
								text="조회"
								type="Emphasized"
								press="toggleAreaPriority"/>
					</f:actions> -->
				</f:DynamicPageTitle>
			</f:title>
			<!-- DynamicPage Header -->
			<f:header>
				<f:DynamicPageHeader pinnable="true">
					<layout:HorizontalLayout allowWrapping="true">
						<layout:VerticalLayout class="sapUiMediumMarginEnd">
							<!-- <ObjectAttribute title="사용자명" text="Warehouse A"/>
							<ObjectAttribute title="소속부서" text="23L"/> -->
                            <fb:FilterBar id="filterBar" header="Search Filters" useToolbar="false"
                                search="onSearch" filterContainerWidth="10rem">
                                <fb:filterGroupItems>
                                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="sliptype" label="전표 유형"
                                        visibleInFilterBar="true">
                                        <fb:control>
                                            <ComboBox
                                                id="idComboBox1"
                                                showSecondaryValues="true"
                                                items="{
                                                    path: 'typeList>/list',
                                                    templateShareable: true
                                                }">
                                                <core:ListItem key="{typeList>type}" text="{typeList>type}" additionalText="{CustomerID}" />
                                            </ComboBox>
                                        </fb:control>
                                    </fb:FilterGroupItem>
                                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="slipdate" label="증빙일자"
                                        visibleInFilterBar="true">
                                        <fb:control>
                                            <DateRangeSelection
                                                id="idDateRangeSelection"
                                                class="DRS1"
                                                value= "{
                                                    'type': 'sap.ui.model.type.DateInterval',
                                                    'formatOptions': {
                                                        'pattern': 'yyyy/MM/dd'
                                                    },
                                                    'parts': [
                                                        {
                                                            'type': 'sap.ui.model.type.Date',
                                                            'path': '/start'
                                                        },
                                                        {
                                                            'type': 'sap.ui.model.type.Date',
                                                            'path': '/end'
                                                        }
                                                    ]
                                                }"/>
                                        </fb:control>
                                    </fb:FilterGroupItem>
                                </fb:filterGroupItems>
                            </fb:FilterBar>
						</layout:VerticalLayout>
					</layout:HorizontalLayout>
					<!-- <layout:HorizontalLayout allowWrapping="true">
						<Button text="aa" class="sapUiMediumMarginEnd"></Button>
					</layout:HorizontalLayout> -->
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
				<!-- <Table id="idSlipbeforeTable"
