						        press="onMessageButtonPress"
						        visible="{= !!$messagesLength}}"/> -->
						<ToolbarSpacer/>
						<Button type="Accept" text="Accept" press="onPressAcceptBtn"/>
						<!-- <Button type="Reject" text="Reject"/> -->
					</Toolbar>
				</f:footer>
			<!-- <f:footer> 
