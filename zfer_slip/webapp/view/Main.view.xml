				<t:Table
					id="idSlipbeforeTable"
					rows="{slipBefore>/blist}"
                    rowActionCount="1"
					selectionMode="MultiToggle"
					visibleRowCountMode="Auto"
					paste="onPaste"
					ariaLabelledBy="title">
					<t:extension>
						<OverflowToolbar style="Clear">
							<Title id="title" text="Products" level="H2"/>
						</OverflowToolbar>
					</t:extension>
					<t:columns>
						<t:Column width="8rem">
							<Label text="상태" />
							<t:template>
								<Text text="{slipBefore>Status}" wrapping="false" />
							</t:template>
						</t:Column>
						<t:Column width="11rem">
							<Label text="문서번호" />
							<t:template>
								<Text text="{slipBefore>Docnum}" wrapping="false" />
							</t:template>
						</t:Column>
						<t:Column width="11rem">
							<Label text="전표상세" />
							<t:template>
								<Button text="Show Details" press="onDetailBtn"/>
							</t:template>
						</t:Column>
						<t:Column width="11rem">
							<Label text="협력사" />
							<t:template>
								<ObjectIdentifier  title="{slipBefore>Partid}" text="{slipBefore>Partname}"/>
							</t:template>
						</t:Column>
						<t:Column width="11rem">
							<Label text="전표유형" />
							<t:template>
								<ObjectIdentifier  title="{slipBefore>Sliptype}" text="{slipBefore>Sliptypedesc}"/>
							</t:template>
						</t:Column>
						<t:Column width="11rem">
							<Label text="증빙일자" />
							<t:template>
								<Text text="{
										path : 'slipBefore>Prfdate',
										formatter : '.formatter.dateTime'
										}" 
									wrapping="false" />
							</t:template>
						</t:Column>
						<t:Column width="9rem">
							<Label text="금액" />
							<t:template>
								<ObjectNumber
									number="{
										parts:[{path:'slipBefore>Amount'},{path:'slipBefore>Curkey'}],
										type: 'sap.ui.model.type.Currency',
										formatOptions: {showMeasure: false}
									}"
									unit="{slipBefore>Curkey}" />
							</t:template>
						</t:Column>
					</t:columns>
				</t:Table>           
			</f:content>
			<!-- DynamicPage Footer toggle footer클릭시-->
